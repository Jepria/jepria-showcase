  </security-role>
  <security-role>
    <role-name>JrsEditShopGoods</role-name>
  </security-role>
  <security-role>
    <role-name>JrsEditRequest</role-name>
  </security-role>
  <security-role>
    <role-name>JrsEditRequestProcess</role-name>
  </security-role>
  <security-role>
    <role-name>JrsEditFeature</role-name>
  </security-role>
  <security-role>
    <role-name>JrsAssignResponsibleFeature</role-name>
  </security-role>
  <security-role>
    <role-name>JrsEditAllFeature</role-name>
  </security-role>
  
  <security-role>
    <role-name>JrsOperatorFeature</role-name>
  </security-role>
  
  <!-- Allow request for Custom Module, Search Module and related resources without authorization -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Public resources</web-resource-name>
      <url-pattern>/JepRiaShowcaseCustom.jsp</url-pattern>
      <url-pattern>/JepRiaShowcaseSearch.jsp</url-pattern>
      <!-- ВАЖНО: OC4J воспринимает шаблон /abc/* как /abc*, поэтому следующая секция
      приводит к открытию JepRiaShowcase.jsp и JepRiaShowcaseEmbedded.jsp без запроса
      аутентификации. Workaround: переименовать JepRiaShowcase*.jsp в Showcase*.jsp.
      В Tomcat данная проблема отсутствует. -->
      <url-pattern>/JepRiaShowcase/*</url-pattern>
      <url-pattern>/autoLogonServlet</url-pattern>
      <url-pattern>/js/*</url-pattern>
      <url-pattern>/css/*</url-pattern>
      <url-pattern>/images/*</url-pattern>
    </web-resource-collection>
  </security-constraint>
  
  <!-- Protect all resources of Application -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Protected resources</web-resource-name>
      <url-pattern>/*</url-pattern>
      <url-pattern>/JepRiaShowcase/ProtectedServices/*</url-pattern>
      <url-pattern>/authenticationServlet</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <!-- At least user has to possess one of the specified roles -->
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
  
  <!-- Allow request for Login page resources without authorization -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Login page resources</web-resource-name>
      <url-pattern>/security/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/WEB-INF/security/Login.jsp</form-login-page>
      <!-- Попадание на form-error-page невозможно (так как авторизация проходит не через это приложение, 
          а через SsoUi, поэтому можно указать любой ресурс) -->
      <form-error-page>/WEB-INF/security/Login.jsp</form-error-page>
    </form-login-config>
  </login-config>
  
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/security/Login.jsp</location>
  </error-page>

</web-app>
